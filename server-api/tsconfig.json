{
    "extends": "@tsconfig/node16/tsconfig.json",
    "include": [ "src/**/*" ],
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",

        "removeComments": true,
        "resolveJsonModule": true,

        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true
    }
}
